{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES2021",
    "module": "ES2022",
    "jsx": "preserve",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src/**/*.ts", "src/**/*.vue"],
  "exclude": ["node_modules", "wwwroot"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
